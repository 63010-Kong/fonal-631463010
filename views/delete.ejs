<%- include("_header") -%>

  <div class="container" style="padding: 0 500px;">
    <div class="row">
      <div class="col-12 text-center">
        <h1>Delete a record?</h1>
      </div>
      <div class="col-12">
        <form action="/delete/<%= model.id %>" method="post">
          <div class="form-horizontal">
  
            <%- include("_display") -%>
  
            <div class="form-group row">
              <div class="col-sm-10">
                <input type="submit" value="Delete" class="btn btn-default btn-danger" />
                <a class="btn btn-secondary cancel" href="/users">Cancel</a>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

<%- include("_footer") -%>