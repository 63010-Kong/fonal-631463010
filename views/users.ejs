<%- include("_header") -%>

<div class="row p-5">
    <div class="col-12 mt-3 text-center">
        <h2><strong>List of User</strong></h2>
    </div>
    <div class="col-12 my-3 text-end">
        <div class="px-5">
            <a class="btn btn-sm btn-primary" style="width: 80px;" href="/create">Add</a>
        </div>
    </div>
    <div class="col-12">
        <div class="card" style="margin: 0 50px;">
            <div class="card-header text-center">
                <h3><strong>User</strong></h3>
            </div>
            <div class="card-body">
                <table id="table-data" class="display" style="width: 100%;">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Password</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th style="width: 180 !important;">Operations</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (const user of model) { %>
                            <tr>
                                <td>
                                    <%= user.id %>
                                </td>
                                <td>
                                    <%= user.username %>
                                </td>
                                <td>
                                    <%= user.password %>
                                </td>
                                <td>
                                    <%= user.email %>
                                </td>
                                <td>
                                    <%= user.tel %>
                                </td>
                                <td class="d-print-none">
                                    <a class="btn btn-sm btn-warning" style="width: 80px;"
                                        href="/edit/<%= user.id %>">Edit</a>
                                    <a class="btn btn-sm btn-danger" style="width: 80px;"
                                        href="/delete/<%= user.id %>">Delete</a>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

    <%- include("_footer") -%>